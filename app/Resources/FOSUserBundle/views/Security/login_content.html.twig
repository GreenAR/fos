{% trans_default_domain 'FOSUserBundle' %}
<div class="row border-bottom">
    <nav class="navbar navbar-default navbar-fixed-top login-nav" role="navigation">
        <div class="navbar-header">
        </div>
    </nav>
</div>

<div class="wrapper wrapper-content">
    <div class="ibox-content middle-box text-center animated fadeInDown">
        <h2 class="login-text">Login and take control</h2>
        <form class="m-t" action="{{ path("fos_user_security_check") }}" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <div class="form-group">
                <input class="form-control" placeholder="{{ 'resetting.request.username'|trans }}" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
            </div>

            <div class="form-group">
                <input class="form-control" placeholder="{{ 'security.login.password'|trans }}" type="password" id="password" name="_password" required="required" />
            </div>


            <input type="hidden" name="_target_path" value="settings_dashboard" />
            <button type="submit" id="_submit" name="_submit" class="btn btn-primary block full-width m-b">{{ 'security.login.submit'|trans }}</button>
            <a href="{{ path('fos_user_resetting_request') }}"><small>Forgot password?</small></a>
        </form>
    </div>
</div>
<footer class="navbar-default navbar-fixed-bottom login-footer">
    <div class="container-fluid text-center">
        <p class="copyright">&copy; 2016 - {{ "now"|date("Y") }} <a href="">FOS</a> Inc. All rights reserved.</p>
    </div>
</footer>




