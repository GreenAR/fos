{% trans_default_domain 'FOSUserBundle' %}

<div class="row border-bottom">
    <nav class="navbar navbar-default navbar-fixed-top login-nav" role="navigation">
        <div class="navbar-header">
        </div>
    </nav>
</div>
<div class="wrapper wrapper-content">
    <div class="ibox-content middle-box text-center animated fadeInDown">
        <h2 class="login-text">Forgot password</h2>
        <p>
            Enter your email address and your password will be reset and emailed to you.
        </p>
        <form class="m-t fos_user_resetting_request" role="form" action="{{ path('fos_user_resetting_send_email') }}" method="POST">
            <div class="form-group">
                <input id="username" name="username" type="text" class="form-control" placeholder="{{ 'resetting.request.username'|trans }}" required="">
            </div>
            <button type="submit" class="btn btn-primary block full-width m-b">{{ 'resetting.request.submit'|trans }}</button>
        </form>
        <form action="{{ path('fos_user_security_login') }}" method="POST">
            <button type="submit" class="btn btn-success block full-width m-b">Return</button>
        </form>
    </div>
</div>
<footer class="navbar-default navbar-fixed-bottom login-footer">
    <div class="container-fluid text-center">
        <p class="copyright">&copy; 2016 - {{ "now"|date("Y") }} <a href="">FOS</a> Inc. All rights reserved.</p>
    </div>
</footer>
