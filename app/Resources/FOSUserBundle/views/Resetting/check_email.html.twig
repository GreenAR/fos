{% extends "@FOSUser/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block head%}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>senaPBX</title>

    <link href="{{ asset('src/css/plugins/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('src/font-awesome/css/font-awesome.css') }}" rel="stylesheet">

    <link href="{{ asset('src/css/animate.css') }}" rel="stylesheet">
    <link href="{{ asset('src/css/style.css') }}" rel="stylesheet">
    <link href="{{ asset('src/css/login.css') }}" rel="stylesheet">

{% endblock %}
{% block fos_user_content %}

    <div class="row border-bottom">
        <nav class="navbar navbar-default navbar-fixed-top login-nav" role="navigation">
            <div class="navbar-header">
            </div>
        </nav>
    </div>
    <div class="wrapper wrapper-content">
        <div class="ibox-content middle-box text-center animated fadeInDown">
            <h2 class="login-text">Reset password</h2>
            <p>
                {{ 'resetting.check_email'|trans({'%tokenLifetime%': tokenLifetime})|nl2br }}
            </p>
            <a type="button" href="{{ path('fos_user_security_login') }}" class="btn btn-success block full-width m-b">Return to login page</a>
        </div>
    </div>
    <footer class="navbar-default navbar-fixed-bottom login-footer">
        <div class="container-fluid text-center">
            <p class="copyright">&copy; 2016 - {{ "now"|date("Y") }} <a href="">FOS</a> Inc. All rights reserved.</p>
        </div>
    </footer>
{% endblock %}
