{% extends "::base2.html.twig" %}
{% block stylesheets %}
    <link href="{{ asset('src/css/plugins/dataTables/datatables.min.css') }}" rel="stylesheet">
{% endblock %}
{% block actionArea %}
    <a href="{{ path('settings_addUser') }}" class="btn btn-primary"><i class="fa fa-plus-square-o"></i> Add user</a>
{% endblock %}
{% block titleContaint %}
    <h2>Users list</h2>
{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li>
            <a>Users</a>
        </li>
        <li class="active">
            <strong>users list</strong>
        </li>
    </ol>
{% endblock %}
{% block UsersActive %}class="active"{% endblock %}
{% block UsersListUserActive %}class="active"{% endblock %}

{% block Containt %}

    <div class="row">
        <div class="col-lg-12">
            {% if app.session.flashBag.has('success') %}
                {% for flashMessage in app.session.flashbag.get('success') %}
                    <div class="alert alert-success">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
            {% endif %}
            {% if app.session.flashBag.has('error') %}
                <div class="alert alert-danger">
                    {% for flashMessage in app.session.flashbag.get('error') %}
                        <ul>
                            <li> {{ flashMessage }}</li>
                        </ul>
                    {% endfor %}
                </div>
            {% endif %}
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Users</h5>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example" >
                            <thead>
                            <tr>
                                <th>Username</th>
                                <th>Email address</th>
                                <th>Last connection</th>
                                <th>Creation date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>

                            {% for u in users %}
                                <tr>
                                    <td>{{ u.username }}</td>
                                    <td>{{ u.email }}</td>
                                    <td>
                                    {%  if u.lastLogin %}

                                        {{ u.lastLogin|date }}
                                    {% else %}
                                        --
                                    {% endif %}
                                    </td>
                                    <td>
                                        {%  if u.creationDate %}

                                            {{ u.creationdate|date }}
                                        {% else %}
                                            --
                                        {% endif %}
                                    </td>
                                    <td>{% if u.enabled %}
                                            active
                                        {% else %}
                                            Inactive
                                        {% endif %}
                                    </td>
                                    <td>
                                        <a title="Edit user" href="{{ path('settings_editUser', {'user': u.id}) }}">
                                          <span class="btn btn-xs btn-primary">
                                                <i class="fa fa-edit text-primary"></i>
                                          </span>
                                        </a>
                                        {% if u.enabled %}
                                            <a title="Disable user" href="{{ path('settings_changeUserStatus', {'id': u.id}) }}">
                                                  <span class="btn btn-xs btn-warning">
                                                        <i class="fa fa-lock"></i>
                                                  </span>
                                            </a>
                                        {% else %}
                                            <a title="Enable user" href="{{ path('settings_changeUserStatus', {'id': u.id}) }}">
                                                  <span class="btn btn-xs btn-warning">
                                                        <i class="fa fa-unlock"></i>
                                                  </span>
                                            </a>
                                        {% endif %}

                                        <a title="Remove user" data-toggle="modal" data-target="#delete-modal" href="#" onclick="globalSet('{{ u.id }}')">
                                            <span class="btn btn-xs btn-danger">
                                                <i class="fa fa-trash"></i>
                                            </span>
                                        </a>
                                    </td>


                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('src/js/plugins/dataTables/datatables.min.js') }}"></script>
    <script>
        $(document).ready(function(){
            $('.dataTables-example').DataTable({
                pageLength: 10,
                responsive: true,
                dom: '<"html5buttons"B>lTfgitp',
                buttons: [
                    { extend: 'copy'},
                    {extend: 'csv'},
                    {extend: 'excel', title: 'ExampleFile'},
                    {extend: 'pdf', title: 'ExampleFile'},

                    {extend: 'print',
                        customize: function (win){
                            $(win.document.body).addClass('white-bg');
                            $(win.document.body).css('font-size', '10px');

                            $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                        }
                    }
                ]

            });

        });
    </script>
    <script>
        var globle = "";
        function globalGet() {
            return globle
        }
        function globalSet(x) {
             globle=x;
        }
        function deletUser() {
            window.location.href = Routing.generate('settings_deleteUser', { user:  globalGet()});
        }
    </script>
{% endblock %}
{% block modals %}
    {{ parent() }}
<div class="modal inmodal" id="delete-modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <h3 class="modal-title"><i class="fa fa-trash"></i> Delete Confirmation</h3>
            </div>
            <div class="modal-body">
                <p class="text-center">Are you sure you want to delete this?</p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Nope!</button>
                <a href="#" class="btn btn-primary confirm-delete" onclick="deletUser();">Yeah, I'm sure</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

